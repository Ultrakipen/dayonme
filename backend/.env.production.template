# =============================================================================
# iExist 프로덕션 환경 변수 템플릿
# 실제 서버에서 .env.production으로 복사하여 사용
# =============================================================================

# 서버 설정
NODE_ENV=production
PORT=3001
API_VERSION=1.0.0

# 보안 설정 (반드시 변경!)
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-minimum-64-characters-required
JWT_EXPIRATION=24h
ACCESS_TOKEN_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# HTTPS/CSRF 설정
HTTPS_ONLY=true
CSRF_ENABLED=true

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_USER=iexist_user
DB_PASSWORD=your-strong-database-password
DB_NAME=iexist_production

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# CORS 설정
FRONTEND_URL=https://your-domain.com
CLIENT_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 파일 업로드
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 로깅
LOG_LEVEL=info
LOG_FORMAT=combined

# 외부 서비스 (소셜 로그인)
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# 푸시 알림 (OneSignal)
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# 에러 추적 (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Swagger 문서 (프로덕션에서는 비활성화 권장)
SWAGGER_ENABLED=false
SWAGGER_TITLE=iExist API
SWAGGER_DESCRIPTION=iExist API Documentation
SWAGGER_VERSION=1.0.0
